// h5访问弹窗
#confirm
  display none
  position fixed
  top 50%
  left 50%
  transform translate(-50%,-50%)
  -webkit-transform translate(-50%,-50%)
  -moz-transform translate(-50%,-50%)
  width 500px
  height 260px
  z-index 11
  background-color #fff
  border 4px solid #000
  border-radius 8px
  color #000
  text-align center
  .c-font
    margin-top 40px
    p
      font-size 22px
  .c-btn
    margin 34px auto 0
    .emot-btn
      float left
      margin-left 58px
      height 48px
      width 160px
      font-size 22px
      border 3px solid #000
      border-radius 4px
      font-weight bold
      line-height 48px
      cursor pointer
    #emot-no
      background-color #ccc
    #emot-ok
      background-color #48dbff
      &:hover
        color #ffd21c
