.area-pager
	overflow hidden
	margin 20px 0 84px 0
	padding-top 4px
	width 100%
	height auto

	.hint
		display inline-block
		float left
		margin 0 0 0 8px
		height 28px
		color #999
		text-align left
		font-size 14px
		line-height 28px

	li
		display inline-block

	.ipt-pager
		display inline-block
		margin 0 10px
		min-width 0
		width 50px
		height 24px
		text-align right

	.btn-pager
		width 50px
		height 26px
		float none
		margin 0 0 0 10px !important
		min-width 32px
		background #F2F2F2
		color #A8A8A8
		border none

.pager
	display inline-block
	float left
	margin 0 8px 0 0
	min-width 28px
	height 28px
	border none
	border-radius 2px
	box-shadow 0 1px 1px rgba(#000, 0.1)
	color #333
	background #ddd
	text-align center
	text-shadow 0 1px 1px rgba(#000, 0.1)
	font-size 14px
	line-height 28px
	cursor pointer

	&:visited
		color #fff

	&:hover
		background-color #ccc
		color #333

	&.active
		background-color #FD4C5B
		color #fff
		cursor default

	.icon
		margin 0