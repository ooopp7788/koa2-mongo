  border-radius 10px
  cursor pointer
  background-color #48dbff
  font-size 18px
  font-weight bold
  &:visited
    color #000
  &:hover
    color #ffd21c

// 表情包放大
.emot-detail
  display none
  position absolute
  top -4px
  left -4px
  z-index 10
  background-color #fff
  border 4px solid #000
  border-top-width 3px
  border-radius 4px
  .emot-detail-top
    overflow auto
    width 540px
    height 400px
    li
      float left
      border-style solid
      border-color #000
      border-right-width 2px
      border-bottom-width 2px
      cursor pointer
      &:hover
        background-color #95ba12
      &:nth-child(6n+1)
        border-left-width 0
      img
        max-width 86px
        max-height 75px
        margin-top 4px
  // 特殊处理
  .emot-special-1
    width 474px
    height 243px
  // -------
  .detail-btn
    margin 20px auto 20px
  .emot-big
    display none
    position absolute
    top 0
    background-color #fff
    border-bottom 2px solid #000
    img
      width 174px
      height 158px
      -max-width 175px
      -max-height 159px
    // 特殊处理
    .img-special-1
      width 152px
    // -------
  .big-left
    left 0
    border-right 2px solid #000
  .big-right
    right 13px
    border-left 2px solid #000
    border-right 1px solid #000

// 滚动轴样式(只有chrome支持)
.scrollbar::-webkit-scrollbar
  width 12px
.scrollbar::-webkit-scrollbar-track
  background-color #e7e7e7
  -webkit-border-radius 8px
  -moz-border-radius 8px
  border-radius 8px
  border 1px solid #ccc
.scrollbar::-webkit-scrollbar-thumb
  background-color #48dbff
  -webkit-border-radius 8px
  -moz-border-radius 8px
  border-radius 8px
  
