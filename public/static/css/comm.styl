    @extend .no-select
    @extend .inline-block
    position relative
    float left
    margin 2px 2px 0
    padding 0 8px
    width auto
    height 28px
    outline none
    outline 0
    border 1px solid #ccc
    border-radius 1px
    background-color #fff
