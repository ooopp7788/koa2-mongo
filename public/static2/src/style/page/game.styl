@import "../variable.styl"
.header
	padding 0 !important
	#nav
		display block !important
		top 0 !important
		background #fff !important
		li
			margin-right 10px
			.user-avatar
				display none
		.header-guide
			overflow visible
			ul
				height auto
				padding 0 12px
				li
					a
						height auto
			.guide-item-con
				left -5px
				a
					color #333
					padding-left 0
					&:hover
						color #fd4c5b
				#user-message-con
					width 186px
					li
						float none
		.search-box
			width 170px
			position relative
			left 0
			top 8px
			#search-text
				width 150px
				border-radius 14px
				border-right 1px solid #e5e5e5
				padding-right 24px
				height 30px
				font-size 12px
				text-indent 6px
			.search-btn
				margin-left -25px
				color #909699
				width 0
				.icon-search
					width 20px
					&:before
						color inherit
			.search-result
				width 240px
				font-size 12px
				border-radius 0 0 3px 3px
				top 38px !important
				.search-hot-ul
					height auto
					li
						height 32px
						width 220px
						b
							font-weight bold
#gamebg,#packslider
	width 100%
	height 628px
	background url("../../img/game/GAMEBG.png") center
	.bgImg
		width 100%
		height 628px
	.box
		width 1150px
		height 534px
		border 5px solid #fd4c5b
		position absolute
		top 0
		.slider-wrap-1
			position: relative;
			&:before, &:after
				content: ""
				display: block
				position: absolute
				width: 240px
				height: 6px
			&:before
				top -17px
				background: url(../../img/page/overwatch/rectangle.png) no-repeat 50% 50%;
				background-size: 240px auto;
				animation cycletop 3s ease-in-out infinite alternate
			&:after
				bottom: -17px
				background: url(../../img/page/overwatch/rectangle.png) no-repeat 50% 50%;
				transform: rotate(180deg);
				background-size: 240px auto;
				animation cyclebottom 3s ease-in-out infinite alternate
		.slider-big
			width: 1150px
			height: auto
			overflow hidden
			position relative
			.slider-con
				position relative
				width 6900px
				height 534px
			.slider-item
				float left
				img
					width 1150px
					height 534px
			.slider-count
				height: 28px;
				position: absolute;
				z-index: 2;
				bottom: 24px;
				right: 520px;
				padding: 0 10px;
				span
					margin: 10px 0 0 10px;
					border-radius: 100px;
					width: 14px;
					height: 14px;
					line-height: 8px;
					overflow: hidden;
					background #fff
					display: inline-block;
					text-indent: 20px;
					cursor: pointer;
					&.active
						background #fd4c5b
						width 30px
		.entrance
			width 257px
			height 74px
			position absolute
			right 0
			bottom 0
			background url("../../img/game/rukou.png") no-repeat
			line-height 74px
			font-size 26px
			color #fff
			span
				display inline-block
				margin 2px 14px 0 60px
			i
				display inline-block
				width 10px
				height 18px
				background url("../../img/game/right.png") no-repeat
				background-size 100%
	.btnL,.btnR
		position absolute
		top 234px
		width 64px
		height 64px
		cursor pointer
		background rgba(0,0,0,0.2) url("../../img/game/left.png") no-repeat center
		&:hover
			background rgba(0,0,0,0.5) url("../../img/game/left.png") no-repeat center
	.btnR
		right 0
		background rgba(0,0,0,0.2) url("../../img/game/right.png") no-repeat center
		&:hover
			background rgba(0,0,0,0.5) url("../../img/game/right.png") no-repeat center
#recommend
	margin-top -40px
	position relative
	z-index 1
.recommend,.gamelist
	margin-top 40px
	.game-title
		font-size 18px
		height 24px
		line-height 24px
		color #333
		font-weight bold
	.recommend-list
		margin 20px -20px 0 0
		.list-box
			width 280px
			height auto
			margin 0 20px 20px 0
			background #fff
			.list-img
				display block
				overflow hidden
				img
					width 340px
					height 160px
					position relative
					left -30px
			.box-mes
				padding 10px 10px
				//.title
				//	max-width 196px
				.name
					display inline-block
					font-size 16px
					height 20px
					line-height 20px
					color #333
					max-width 196px
				.message
					font-size 12px
					height 16px
					line-height 16px
					color #999
					margin-top 6px
					max-width 196px
				.download
					width 58px
					height 28px
					line-height 28px
					text-align center
					border 1px solid #FF4A59
					background #FFF2F3
					color #ff4a59
					border-radius 100px
					margin-top -36px
					font-size 13px
					&:hover
						background #ff4a59
						color #fff
			&:hover
				box-shadow: 0 2px 16px rgba(0,0,0,0.2);
	.game-advertise
		width 100%
		img
			width 880px
			height 120px
	header
		span
			font-size 18px
			height 24px
			line-height 24px
			color #333
			font-weight bold
		.mes-tab,.listTab,.message-tab
			a
				display inline-block
				padding 0 12px
				height 24px
				line-height 24px
				text-align center
				color #333
				font-size 12px
				border-radius 2px
				&.active
					background #FAE7E8
					color #fd4c5b
	.message-box
		height 582px
		.listMessage
			height 564px
	.message-box,.flash-list
		padding 14px 12px 18px 12px
		margin 20px 0 0 0
		background #fff
		.mes-list
			margin-bottom 12px
			.mesimg
				width 30px
				img
					width 30px
					height 30px
					border-radius 100px
			.title
				width 196px
				height 36px
				overflow hidden
				color #0092d6
				word-wrap break-word
				span
					color #151515
			.notice
				color #ff4a59
			.areames
				margin-top 10px
				padding-bottom 16px
				border-bottom 2px dotted #D6D6D6
				.mes
					height 20px
					line-height 20px
					text-align center
					padding 0 4px
					color #999
					background #f5f5f5
				span
					margin 0 6px
					display inline-block
					max-width 120px
				img
					width 16px
					height 16px
					border-radius 2px
					margin-top 2px
				.date
					color #999
	.refresh
		width 74px
		margin 10px auto
		cursor pointer
		.refimg
			width 17px
			height 14px
			background url("../../img/game/refresh.png") no-repeat
		span
			font-size 12px
			height 16px
			line-height 14px
			color #ff4a59
			margin-left 7px
.gamelist
	header
		span
			margin-right 14px
.gameList
	margin 20px -10px 0 0
	height 390px
	.listBox
		width 435px
		height 90px
		background #fff
		margin-right 10px
		margin-bottom 10px
		position relative
		.listimg
			width 90px
			margin-right 12px
			img
				width 90px
				height 90px
			.game-hot
				position absolute
				top 0
				width 20px
				height 20px
				line-height 20px
				text-align center
				background #ff4a59
				color #fff
				font-size 12px
			.newcolor
				background #ff9500
		.leftL
			width 250px
			margin-top 12px
			.title
				font-size 16px
				height 20px
				line-height 20px
				color #333
			.name,.date
				font-size 12px
				height 16px
				line-height 16px
				color #999
			.name
				margin 8px 0 4px 0
		.appointment
			width 58px
			height 28px
			line-height 28px
			text-align center
			margin 30px 18px 0 0
		.btn
			border 1px solid #ff9500
			border-radius 100px
			background #FFF6E9
			color #ff9500
			&:hover
				background #ff9500
				color #fff
		.btns
			border 1px solid #ff4a59
			border-radius 100px
			background #FFF2F3
			color #ff4a59
			&:hover
				background #ff4a59
				color #fff
		.listpop
			display none
			width 210px
			height 178px
			position absolute
			background #fff
			z-index 1
			box-shadow 0 4px 10px rgba(0,0,0,0.2)
			img
				width 210px
				height 178px
		&:hover
			box-shadow 0 4px 16px rgba(0,0,0,0.2)
	.nothing
		width 204px
		position absolute
		margin 130px 338px
		.img
			width 107px
			height 110px
			background url("../../img/game/AC-ç©º.png") no-repeat
			margin 0 0 16px 48px
		span
			color #333
.flash-list
	height 364px
	padding 14px 12px 12px 12px!important
	.flash-box
		height 332px
	.games
		margin-bottom 18px
		cursor pointer
		.name
			font-size 12px
			height 16px
			line-height 16px
			color #333
			max-width 214px
		.gameImg
			width 18px
			height 16px
			background url("../../img/game/like.png") no-repeat
			&.active
				background url("../../img/game/islike.png") no-repeat
	.refresh
		width 236px
		border-top 2px dotted #e6e6e6
		margin 8px 0 0 0
		padding-top 10px
		.refimg
			margin-left 82px
@media screen and (max-width: 1280px)
	#gamebg
		.box
			width 970px
			height 534px
			.slider-big
				width 970px
				.slider-item
					overflow hidden
					img
						position relative
						left -90px
						height 534px
				.slider-count
					height 28px
					position absolute
					z-index 2
					bottom 24px
					padding 0 10px
	.recommend,.gamelist
		.recommend-list
			.list-box
				width 340px
				.box-img
					img
						left 0
				.box-mes
					.name,.message
						max-width 246px
			.list-box:nth-last-of-type(-n+2)
						display none
		.gameList
			.listBox
				width 345px
				.leftL
					width 160px
	.game-advertise
		width 100%
		div
			height 120px
			position relative
			overflow hidden
			img
				left -90px
				position absolute
	.header
		#nav
			li
				margin-right 2px