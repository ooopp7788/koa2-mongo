@keyframes sliderleft
  0%
    left 60px
    width: 0px
  25%
    left 60px
    width: 120px
  75%
    left: 382px
    width: 120px
  100%
    left 502px
    width: 0px
@keyframes sliderright
  0%
    left 502px
    width: 0px
  25%
    left 382px
    width: 120px
  75%
    left: 60px
    width: 120px
