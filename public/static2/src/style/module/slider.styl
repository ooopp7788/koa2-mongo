.area-slider
  $spacing = 20px
  background #f8f8f8
  height 260px
  padding 10px 10px 0 10px
  li
    overflow hidden
    display inline-block
    margin 0 $spacing $spacing 0
  .calendar-box
    //缩放时会错乱所以-1px
    margin-bottom ($spacing - 1)
    border-radius 3px
    width 452px
    height 120px
    overflow hidden
  .slider-big
    width 452px
    height 260px
    overflow hidden
    position relative
    border-radius 3px
    a
      display block
      height 100%
      width 100%
    .slider-con
      position absolute
      left 0
      top 0
    .slider-item
      position relative
      margin 0
      vertical-align top
      width 452px
      height 260px
      overflow hidden
      img
        margin-left -28px
    .slider-title
      position absolute
      bottom 0
      left 0
      width 100%
      height 28px
      line-height 28px
      padding-top 30px
      color #fff
      b
        margin-left 10px
        width 70%
        display block
    .slider-count
      height 28px
      position absolute
      z-index 2
      bottom 0
      right 0
      padding 0 10px
      span
        margin 10px 0 0 8px
        border-radius 5px
        width 8px
        height 8px
        line-height 8px
        overflow hidden
        text-indent -10px
        background #fff
        display inline-block
        text-indent 20px
        cursor pointer
      .active
        background #fd4c5d
        width 16px
  .slider-right-x6
    width 688px
    height 260px
    .slider-small
      $width = 216px
      $padding = 12px
      margin 0 (- $spacing) (- $spacing) 0
      li
        width $width
        height 120px
        vertical-align top
        border-radius 3px
      a
        display block
        position relative
        &:hover
          .mask
            height 120px
            background rgba(0, 0, 0, 0.7)
            padding-top 0

          b
            padding 0 $padding
            margin $padding 0
            height 40px
            line-height 20px
            overflow hidden
          p
            display block
      img
        position relative
        z-index 1
      b, p
        display block
        color #fff
        padding 0 $padding
      p
        display none
        position absolute
        bottom 0
        left 0
        height 50px
        font-size 12px
        line-height 22px
        width ($width - $padding * 2)
      span
        display block
        clear both
      .icon
        font-size 12px
        &:before
          margin-right 5px
        &:first-of-type
          width 80px
          display inline-block
      .mask-gradient
        height 28px
        line-height 28px
        position absolute
        left 0
        bottom 0
        padding-top 30px
        z-index 2
        width 100%




@media screen and (max-width: 1280px)
  .area-slider
    .slider-big
      width 508px
      .slider-item
        width 508px
        img
          margin-left 0
    .slider-right-x6
      width 452px
      .slider-small
        li:nth-last-of-type(-n+2)
          display none